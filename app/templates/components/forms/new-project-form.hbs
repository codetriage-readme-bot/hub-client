<form>
  <fieldset class="form-group">
    <label for="card-title">Project Title</label>
    {{input
      type="text"
      value=model.title
      class="form-control"
      id="card-title"
      placeholder="Enter the title of the card"
      focus-out="validateInputTitle"
    }}
    {{#if errors.title}}
      <small class="text-muted text-danger">{{errors.title}}</small>
    {{/if}}
  </fieldset>

  <fieldset class="form-group">
    <label for="card-description">Project Description</label>
    {{textarea
      value=model.description
      class="form-control"
      id="card-description"
      rows="5"
      focus-out="validateInputDescription"
    }}
    {{#if errors.description}}
      <small class="text-muted text-danger">{{errors.description}}</small>
    {{/if}}
  </fieldset>

  <div class="form-group">
    <button {{action 'save'}} class="btn btn-success">Save</button>
    <button {{action 'cancel'}} class="btn btn-link">Cancel</button>
  </div>
</form>
