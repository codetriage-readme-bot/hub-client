<div class="row">
  <div class="col-md-3">
    {{side-bar}}
  </div>
  <div class="col-md-6">
    <div class="row">
      {{#each users as |user|}}
        <div class="col-md-6">
          <div class="card text-xs-center">
            <div class="card-header">
              User
            </div>
            <div class="card-block">
              <h4 class="card-title">
                {{#link-to 'users.user' user}}
                  {{user.name}}
                {{/link-to}}
              </h4>
            </div>
            <div class="card-footer text-muted">
              {{user.email}}
            </div>
          </div>
        </div>
      {{else}}
        Sorry, nobody is here.
      {{/each}}
    </div>
  </div>
  <div class="col-md-3">
    {{outlet}}
  </div>
</div>
